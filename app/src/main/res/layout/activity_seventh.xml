<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.caculator.thirdActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-41dp">

        <EditText
            android:id="@+id/mg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/g"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="37dp"
            android:hint="毫克"/>

        <EditText
            android:id="@+id/g"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/kg"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="26dp"
            android:hint="克"/>

        <EditText
            android:id="@+id/kg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/t"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="41dp"
            android:hint="千克"/>

        <EditText
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="45dp"
            android:hint="吨"
            android:layout_above="@+id/button4"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/button4"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@android:drawable/btn_radio"
            android:text="返回"/>

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/mg"
            android:gravity="center"
            android:text="mg"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/g"
            android:gravity="center"
            android:text="g"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/kg"
            android:gravity="center"
            android:text="kg"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/t"
            android:gravity="center"
            android:text="t"/>
        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t"
            android:layout_centerHorizontal="true"
            android:text="清除"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
