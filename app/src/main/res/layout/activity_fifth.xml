<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.caculator.thirdActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-41dp">

        <EditText
            android:id="@+id/cm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/dm"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="37dp"
            android:hint="厘米"/>

        <EditText
            android:id="@+id/dm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/m"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="26dp"
            android:hint="分米"/>

        <EditText
            android:id="@+id/m"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/km"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="41dp"
            android:hint="米"/>

        <EditText
            android:id="@+id/km"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/button4"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="29dp"
            android:hint="千米"/>

        <Button
            android:id="@+id/button4"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@android:drawable/btn_radio"
            android:text="返回"/>

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/km"
            android:layout_centerHorizontal="true"
            android:text="清除"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/cm"
            android:gravity="center"
            android:text="cm"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/dm"
            android:gravity="center"
            android:text="dm"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/m"
            android:gravity="center"
            android:text="m"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/km"
            android:gravity="center"
            android:text="km"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
